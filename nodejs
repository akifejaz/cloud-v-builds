node('pioneer-1-admin') {
    stage('Clean Workspace') {
        cleanWs()
    }
    stage('Installing Dependencies') {
        sh '''#!/bin/bash
            export DEBIAN_FRONTEND=noninteractive
            sudo apt update
            sudo apt-get install -y python3 g++-12 gcc-12 make python3-pip
        '''
    }
    stage('Run system_info') {
        sh '''#!/bin/bash
            echo '============================================================='
            echo '                       CPU INFO START                        '
            echo '============================================================='
            cat /proc/cpuinfo
            echo '============================================================='
            echo '                       CPU INFO END                          '
            echo '============================================================='

            echo '============================================================='
            echo '                       Kernel Info Start                        '
            echo '============================================================='
            uname -a
            echo '============================================================='
            echo '                       Kernel Info End                          '
            echo '============================================================='
            echo '============================================================='
            echo '                       Glibc Version Start                        '
            echo '============================================================='
            ldd --version
            echo '============================================================='
            echo '                       Glibc Version End                          '
            echo '============================================================='
            echo '============================================================='
            echo '                       OS Info Start                        '
            echo '============================================================='
            cat /etc/os-release
            echo '============================================================='
            echo '                       OS Info End                        '
            echo '============================================================='
        '''
    }
    stage('Setting Directories and clone') {
        sh '''#!/bin/bash
            mkdir installed_binaries
            git config --global http.version HTTP/1.1
            git clone --branch main --single-branch --depth=1 https://github.com/nodejs/node.git
            git config --global http.version HTTP/2
        '''
    }

    stage('Run configure') {
        sh '''#!/bin/bash -l
            set -x
            cd node
            ./configure --prefix=$(readlink -f ../installed_binaries) --openssl-no-asm --dest-cpu=riscv64
        '''
    }
    stage('make') {
        sh '''#!/bin/bash -l
            set -x
          cd node
          make -j32
        '''
    }
    stage('make install') {
      sh '''#!/bin/bash -l
            set -x
          cd node
          make install
      '''
    }
    stage('Check Version') {
        sh '''#!/bin/bash -l
            set -x
            ./installed_binaries/bin/node --version
        '''
    }
    stage('Compress Binaries and transfer to Cloud') {
        sshagent(credentials: ['SSH_CLOUD_V_STORE_ID']){
            sh '''#!/bin/bash -l
            set -x
                export FILENAME="node_$(date -u +"%H%M%S_%d%m%Y").tar.gz"
                tar -cvf ./$FILENAME ./installed_binaries
                eval $(keychain --eval --agents ssh ~/.ssh/cloud-store-key)
                ssh cloud-store 'mkdir -p /var/www/nextcloud/data/admin/files/cloud-v-builds/node'
                ssh cloud-store 'rm /var/www/nextcloud/data/admin/files/cloud-v-builds/node/*' # Removing older builds
                scp $FILENAME cloud-store:/var/www/nextcloud/data/admin/files/cloud-v-builds/node/
                ssh cloud-store 'sudo -u www-data php /var/www/nextcloud/occ files:scan --path="admin/files"'
            '''
        }
    }
}